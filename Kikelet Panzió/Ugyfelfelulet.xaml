<Window x:Class="Kikelet_Panzió.Ugyfelfelulet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kikelet_Panzió"
        mc:Ignorable="d"
        Title="Ugyfelfelulet" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Név"/>
        <TextBox x:Name="TbxNev"/>
            <Label Content="Születési Év"/>
            <DatePicker x:Name="DpSzulet"/>
            <Label Content="E-Mail"/>
        <TextBox x:Name="TbxEmail"/>
        <Label Content="VIP?"/>
        <CheckBox x:Name="ChbxVip" Checked="ChbxVip_Checked"/>
            <Label Content="Szobaszám(1-6)"/>
            <TextBox x:Name="TbxSzoba"/>
            <Label Content="Férőhelyek(2-4)"/>
            <TextBox x:Name="TbxHely"/>
            <Label Content="Ár:"/>
            <TextBox x:Name="TbxAr" Text="{Binding Ar}"/>
            <Button x:Name="BtnRegiszt" Content="Regisztrálás" Click="BtnRegiszt_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
